login_filter = driver.find_element(:id, 'ui-id-3')
puts login_filter.text
login_filter.click

puts "waiting"
sleep 2

login_toggle = driver.find_element(:id, 'toggleRawLoginFilter')
login_filter = driver.find_element(:id, 'ldap_login_filter')

puts "login filter visible ? #{login_filter.displayed?}"

unless login_filter.displayed?
  login_toggle.click
  sleep 2
end

puts "login_filter visible ? #{login_filter.displayed?}"

login_filter.clear
login_filter.send_keys '(&(|(objectclass=person))(|(uid=%uid)(|(cn=%uid))))'

driver.find_element(:class, 'ldap_action_continue').click()