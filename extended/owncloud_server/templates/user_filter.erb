driver.navigate.to "http://<%= params["domain"] %>/index.php/settings/admin"
puts "configuring..."

user_filter = driver.find_element(:id, 'ui-id-2')
puts user_filter.text
user_filter.click
sleep 5

raw_toggle = driver.find_element(:id, 'toggleRawUserFilter')
raw_filter = driver.find_element(:id, 'ldap_userlist_filter')

puts "raw_filter visible ? #{raw_filter.displayed?}"

unless raw_filter.displayed?
  raw_toggle.click
  sleep 2
end

puts "raw_filter visible ? #{raw_filter.displayed?}"

raw_filter.clear
raw_filter.send_keys '(objectclass=person)'